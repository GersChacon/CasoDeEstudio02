@model List<CasoDeEstudio02.Models.CasasModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Casas Disponibles</h4>
        <hr><br />

        <div class="row">
            <div class="row col-12">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-3 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@item.DescripcionCasa</h5>

                                    <ul class="list-group list-group-flush mb-3">
                                        <li class="list-group-item"><strong>Precio:</strong> $ @item.PrecioCasa.ToString("N2")</li>
                                        <li class="list-group-item"><strong>Usuario:</strong> @item.UsuarioAlquiler</li>
                                        <li class="list-group-item">
                                            <strong>Fecha:</strong>
                                            @(item.FechaAlquiler.HasValue ? item.FechaAlquiler.Value.ToString("dd/MM/yyyy") : "No alquilada")
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="card h-100 shadow-sm text-center p-4">
                            <h5 class="card-title">No hay casas disponibles en este momento</h5>
                            <p class="card-text">Por favor, vuelve más tarde o revisa otras opciones.</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
